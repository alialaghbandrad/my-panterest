{% extends 'layouts/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    
<div class="col-md-6 mx-auto">
    <h1 class="text-center mb-5">Create an account</h1>
    {{ form_start(registrationForm) }}
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(registrationForm.firstName) }}
            </div>
            <div class="col-md-6">
                {{ form_row(registrationForm.lastName) }}
            </div>
        </div>
        <div class="mb-3">
            {{ form_row(registrationForm.email) }}
        </div>
        <div class="mb-3">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
        </div>
        <div class="mb-3">
            {{ form_row(registrationForm.agreeTerms) }}
        </div>    
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary" formnovalidate>Register</button>
        </div>
        <p class="mt-5 mb-3 text-center text-muted">
            Already have an account? <a href="{{ path('app_login') }}">Log in</a>
        </p>
    {{ form_end(registrationForm) }}
    
</div>
{% endblock %}
