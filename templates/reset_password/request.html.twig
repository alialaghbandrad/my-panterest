{% extends 'layouts/base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">

            <h1 class="mt-5 mb-3 text-center">Reset your password</h1>
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger mb-3 rounded" role="alert">{{ flashError }}</div>
            {% endfor %}

            <div class="mt-3 mb-5 text-center text-muted">
                <small>
                    Enter your email address and we we will send you a
                    link to reset your password.
                </small>
            </div>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                
                <div type="submit" class="d-grid gap-2 mt-3">
                    <button class="btn btn-primary">Send password reset email</button>
                </div>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
